<h1 class="text-xl font-bold">タスクの新規登録</h1>
<nav class="flex justify-end">
  <%= link_to "一覧", tasks_path, class:"font-bold text-gray-500 hover:text-black" %>
</nav>

<%= form_with model: @task, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "block mb-1" %>
    <%= f.text_field :name, class:"block w-1/2 rounded-md border-2 border-indigo-300 focus:border-indigo-600 focus:outline-none py-1 px-2", id: "task_name" %>
    <small>タスク名を入力してください</small>
  </div>
  <div class="mb-3">
    <%= f.label :description, class: "block mb-1" %>
    <%= f.text_area :description, rows:10, class:"block w-1/2 rounded-md border-2 border-indigo-300 focus:border-indigo-600 focus:outline-none py-1 px-2", id:"task_description" %>
    <small>タスク内容の説明を入力してください</small>
  </div>
  <%= f.submit nil, class:"border border-indigo-500 bg-indigo-500 text-white rounded-md px-4 py-2 mb-2 transition duration-500 ease select-none hover:bg-indigo-600 focus:outline-none focus:shadow-outline inline-block cursor-pointer" %>
<% end %>
