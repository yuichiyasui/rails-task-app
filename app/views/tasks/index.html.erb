<h1 class="text-xl font-bold mb-2">タスク一覧</h1>
<p class="mb-4">タスクを追加してみましょう。</p>
<%= link_to '新規登録', new_task_path, class:"border border-indigo-500 bg-indigo-500 text-white rounded-md px-4 py-2 mb-4 transition duration-500 ease select-none hover:bg-indigo-600 focus:outline-none focus:shadow-outline inline-block" %>

<table class="table-auto w-full">
    <thead class="bg-indigo-500 border border-indigo-500 text-white">
        <tr>
            <th class="py-3 px-4 text-left font-normal">
                <%= Task.human_attribute_name(:name) %>
            </th>
            <th class="py-3 px-4 text-left font-normal">
                <%= Task.human_attribute_name(:created_at) %>
            </th>
        </tr>
    </thead>
    <tbody class="border border-indigo-100">
        <% @tasks.each do |task| %>
        <tr class="odd:bg-indigo-100">
            <td class="py-3 px-4">
                <%= link_to task.name, task_path(task), class: "text-gray-600 hover:text-gray-400" %>
            </td>
            <td class="py-3 px-4">
                <%= task.created_at %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>